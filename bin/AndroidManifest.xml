<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tbs.frc.robotsim"
    android:versionCode="3"
    android:versionName="1.0.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.tbs.frc.robotsim.TbsFrcRobotMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tbs.frc.robotsim.TbsPreferenceActivity"
            android:label="@string/title_pref" >
        </activity>
        <activity
            android:name="com.tbs.frc.robotsim.TbsFrcHelpActivity"
            android:label="@string/title_help" >
        </activity>
    </application>

</manifest>